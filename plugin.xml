<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="com.hackplan.meiqia" version="0.3.0">
  <name>Cordova meiqia Plugin</name>
  <description>meiqia</description>
  <license>Apache 2.0</license>
  <keywords>cordova,meiqia,phonegap</keywords>
  <js-module src="www/MeiQia.js" name="MeiQia">
    <clobbers target="meiqia"/>
  </js-module>
  <platform name="android">
      <config-file target="AndroidManifest.xml" parent="/*">
          <uses-permission android:name="android.permission.INTERNET" />
          <uses-permission android:name="android.permission.READ_PHONE_STATE" />
          <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
          <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
          <uses-permission android:name="android.permission.RECORD_AUDIO" />
      </config-file>
      <source-file src="src/android/MeiQia.java" target-dir="src/com/hackplan/meiqia" />
      <framework src="src/android/MeiQia/build.gradle" custom="true" type="gradleReference" />
      <feature name="MeiQia">
        <param name="android-package" value="com.hackplan.meiqia"/>
        <param name="onload" value="true" />
    </feature>
  </platform>
</plugin>
