<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="com.hackplan.meiqia" version="0.3.0">
  <name>Cordova meiqia Plugin</name>
  <description>meiqia</description>
  <license>Apache 2.0</license>
  <keywords>cordova,meiqia,phonegap</keywords>
  <js-module src="www/MeiQia.js" name="MeiQia">
    <clobbers target="meiqia"/>
  </js-module>
  <platform name="android">
      <hook type="after_plugin_add" src="src/android/scripts/android-install.js" />
      <hook type="after_plugin_install" src="src/android/scripts/android-install.js" />
      <hook type="before_plugin_rm" src="src/android/scripts/android-install.js" />
      <hook type="before_plugin_uninstall" src="src/android/scripts/android-install.js" />
      <config-file target="AndroidManifest.xml" parent="/*">
          <uses-permission android:name="android.permission.INTERNET" />
          <uses-permission android:name="android.permission.READ_PHONE_STATE" />
          <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
          <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
          <uses-permission android:name="android.permission.RECORD_AUDIO" />
      </config-file>
      <source-file src="src/android/MeiQia.java" target-dir="src/com/hackplan/meiqia" />
  </platform>
</plugin>
